    advice += f"- å½“å‰ä¿¡å·: {signal}\n"
    advice += "- Kçº¿å½¢æ€ï¼šè¿‘æœŸè¶‹åŠ¿å‚è€ƒæŠ€æœ¯æŒ‡æ ‡\n"
    advice += "- å¤–éƒ¨å› å­ï¼šæ³¨æ„å¸‚åœºæ¶ˆæ¯å’Œäº¤æ˜“æ‰€åŠ¨æ€\n"
    advice += "- å»ºè®®ï¼šç»“åˆå¤šå‘¨æœŸã€é‡ä»·è§‚å¯Ÿè°¨æ…æ“ä½œ"
    return advice

# ================== ä¸»å¾ªç¯ ==================
last_send = datetime.utcnow() - timedelta(hours=1)
while True:
    now = datetime.utcnow()
    report_lines = []
    for coin in coins:
        for period_key, period_val in periods.items():
            for ex in exchanges:
                df = get_kline(ex, coin, period_val)
                if df is None or len(df)<20:
                    continue
                res = analyze(df)
                # åªåœ¨æ¯å°æ—¶ç”Ÿæˆ Telegram
                if (now - last_send).total_seconds() >= 3600:
                    line = f"{coin.upper()} | {period_key} | {ex} | {res['signal']} {res['strength']}\n"
                    line += f"å…¥åœº: {format_price(res['entry'])} | EMA5:{format_price(res['ema5'])} EMA10:{format_price(res['ema10'])} EMA30:{format_price(res['ema30'])}\n"
                    line += f"MACD_diff:{format_price(res['macd_diff'])} RSI:{format_price(res['rsi'])} WR:{format_price(res['wr'])} VOL:{format_price(res['vol'])}"
                    report_lines.append(line)
                    # GPT å ä½åˆ†æ
                    report_lines.append(gpt_advice(coin, res['signal']))

    if report_lines and (now - last_send).total_seconds() >= 3600:
        send_telegram("\n\n".join(report_lines))
        last_send = now

    # æ¯åˆ†é’Ÿæ›´æ–°æ•°æ®
    time.sleep(60)
